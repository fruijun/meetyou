<!--pages/login/index.wxml-->
<view>
<image src="/img/meetyou.png" class="img"></image>
</view>
<view class="login-item">
<view class="login-item-info">用户名</view>
<input class="uname" maxlength="10" placeholder="请输入用户名" bindinput='usernameinput'/>
</view>
<view class="login-item">
<view class="login-item-info">密码</view>
<input password type="text" placeholder="请输入密码" class="pwd" bindinput='passwordinput'/>
</view>
<button bindtap="loginBtnClick" class="loginBtn">登录</button>
<view class="login-item bottom-info">
<view>没有账户？<text>注册</text></view>
<view class="wechat-icon">
  <image src="/img/wx.png" class="wx" bindtap="regist"></image>
</view>
</view>